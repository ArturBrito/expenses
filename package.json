{
  "name": "expenses",
  "version": "1.0.0",
  "description": "",

  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "test": "jest --passWithNoTests --runInBand --no-cache",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:verbose": "npm test -- --verbose -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage",
    "test:coveralls": "npm run test:ci && coveralls < coverage/lcov.info",
    "dev:api": "nodemon -r module-alias/register src/api/server.ts",
    "dev:bootstrap": "nodemon -r module-alias/register src/menu/index.ts",
    "start:api": "node -r module-alias/register dist/api/server.js"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@faker-js/faker": "^7.3.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.5.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^17.0.35",
    "@types/rpio": "^2.4.2",
    "@types/validator": "^13.7.4",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "eslint": "^8.16.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^28.1.0",
    "nodemon": "^2.0.19",
    "prisma": "^4.0.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.2"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run test:all && npm run lint && npm run format"
    }
  },

  "dependencies": {
    "@prisma/client": "^4.0.0",
    "bcrypt": "^5.0.1",
    "express": "^4.18.1",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "validator": "^13.7.0"
  }
}
